@page
@model Varejo.Pages.Produtos.EditModel

<h1>Editar Produto</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Produto.NomeProduto" class="control-label"></label>
        <input asp-for="Produto.NomeProduto" class="form-control" />
        <span asp-validation-for="Produto.NomeProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Produto.Preco" class="control-label"></label>
        <input asp-for="Produto.Preco" class="form-control" />
        <span asp-validation-for="Produto.Preco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Produto.QuantidadeEstoque" class="control-label"></label>
        <input asp-for="Produto.QuantidadeEstoque" class="form-control" />
        <span asp-validation-for="Produto.QuantidadeEstoque" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Produto.NomeCategoria" class="control-label"></label>
        <input asp-for="Produto.NomeCategoria" class="form-control" />
        <span asp-validation-for="Produto.NomeCategoria" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Produto.Fornecedor" class="control-label"></label>
        <input asp-for="Produto.Fornecedor" class="form-control" />
        <span asp-validation-for="Produto.Fornecedor" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Produto.IdProduto" />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<a asp-page="../Index">Voltar para a lista</a>
