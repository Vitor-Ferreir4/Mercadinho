@page
@model Varejo.Pages.Produtos.DeleteModel
@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir Produto</h1>

<h3>Tem certeza de que deseja excluir este produto?</h3>

<div>
    <h4>Produto</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Produto.NomeProduto
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Produto.IdProduto" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="../Index" class="btn btn-secondary">Cancelar</a>
</form>
