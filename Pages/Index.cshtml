@page
@model Varejo.Pages.IndexModel
@{
    ViewData["Title"] = "Produtos";
}

<head>
    <style>
        body {
  margin-bottom: 60px;
  color: #333; /* Cor de texto escura para contraste com o fundo */
  background-color: #F2F2F2; /* Fundo claro para uma base neutra */
}

  /* Estilo para o botão de enviar específico */
        .btn-submit {
            background-color: #6A1B9A; /* Roxo para o botão de enviar */
            color: #FFFFFF; /* Texto branco para contraste */
            border: none; /* Remove borda padrão */
        }

        /* Estilo para o botão de enviar quando em foco ou hover */
        .btn-submit:hover, .btn-submit:focus {
            background-color: #4A148C; /* Roxo mais escuro para hover/foco */
            color: #FFFFFF; /* Texto branco para contraste */
        }

        /* Outros estilos para a tabela e botões */
        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #000000;
            background-color: #FFFFFF;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            background-color: #0b0416; /* Verde escuro para o cabeçalho da tabela */
            color: #f2f2f2; /* Texto claro para o cabeçalho */
        }

        .table tbody tr:nth-of-type(odd) {
            background-color: #cacaca; /* Fundo branco para linhas ímpares */
        }

        .table tbody tr:nth-of-type(even) {
            background-color: rgb(238, 238, 238); /* Fundo cinza claro para linhas pares */
        }

        .btn {
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            text-align: center;
            display: inline-block;
            font-weight: 400;
            line-height: 1.5;
            border: 1px solid transparent;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #0b0416; /* Verde escuro para o botão primário */
            color: #F2F2F2; /* Texto claro para contraste */
            border: none;
        }

        .btn-primary:hover, .btn-primary:focus {
            background-color: #260953; /* Verde escuro mais intenso para hover/foco */
            color: #F2F2F2; /* Texto claro para contraste */
        }

        .btn-warning {
            background-color: #f8b03d; /* Amarelo para o botão de aviso */
            color: #FFFFFF; /* Texto branco para contraste */
        }

        .btn-warning:hover, .btn-warning:focus {
            background-color: #c4841e; /* Laranja mais escuro para hover/foco */
            color: #FFFFFF; /* Texto branco para contraste */
        }

        .btn-danger {
            background-color: #ac1717; /* Vermelho brilhante para o botão de perigo */
            color: #FFFFFF; /* Texto branco para contraste */
        }

        .btn-danger:hover, .btn-danger:focus {
            background-color: #990808; /* Vermelho mais escuro para hover/foco */
            color: #FFFFFF; /* Texto branco para contraste */
        }
    </style>
</head>

<div class="minhadiv">

<h1 class="text-red">Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Quantidade em Estoque</th>
            <th>Categoria</th>
            <th>Fornecedor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model.Produtos)
        {
            <tr>
                <td>@produto.IdProduto</td>
                <td>@produto.NomeProduto</td>
                <td>@produto.Preco.ToString("C")</td>
                <td>@produto.QuantidadeEstoque</td>
                <td>@produto.NomeCategoria</td>
                <td>@produto.Fornecedor</td>
                <td>
                    <a asp-page="/Produtos/Edit" asp-route-id="@produto.IdProduto" class="btn btn-warning">📝</a>
                    <a asp-page="/Produtos/Delete" asp-route-id="@produto.IdProduto" class="btn btn-danger">🗑</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>

<a asp-page="/Produtos/Create" class="btn btn-primary">+</a>
