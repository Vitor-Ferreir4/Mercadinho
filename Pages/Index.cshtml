@page
@model Varejo.Pages.IndexModel
@{
    ViewData["Title"] = "Produtos";
}

<head>
    <style>
        body {
  margin-bottom: 60px;
  color: #333;
  background-color: #F2F2F2;
}

        .btn-submit {
            background-color: #6A1B9A;
            color: #FFFFFF; 
            border: none; 
        }

        
        .btn-submit:hover, .btn-submit:focus {
            background-color: #4A148C;
            color: #FFFFFF; 
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #000000;
            background-color: #FFFFFF;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            background-color: #0b0416;
            color: #f2f2f2;
        }

        .table tbody tr:nth-of-type(odd) {
            background-color: #cacaca;
        }

        .table tbody tr:nth-of-type(even) {
            background-color: rgb(238, 238, 238);
        }

        .btn {
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            text-align: center;
            display: inline-block;
            font-weight: 400;
            line-height: 1.5;
            border: 1px solid transparent;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #0b0416;
            color: #F2F2F2;
            border: none;
        }

        .btn-primary:hover, .btn-primary:focus {
            background-color: #260953;
            color: #F2F2F2;
        }

        .btn-warning {
            background-color: #f8b03d;
            color: #FFFFFF; 
        }

        .btn-warning:hover, .btn-warning:focus {
            background-color: #c4841e;
            color: #FFFFFF; 
        }

        .btn-danger {
            background-color: #ac1717;
            color: #FFFFFF; 
        }

        .btn-danger:hover, .btn-danger:focus {
            background-color: #990808;
            color: #FFFFFF; 
        }
    </style>
</head>

<div class="minhadiv">

<h1 class="text-red">Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Preço</th>
            <th>Quantidade em Estoque</th>
            <th>Categoria</th>
            <th>Fornecedor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model.Produtos)
        {
            <tr>
                <td>@produto.IdProduto</td>
                <td>@produto.NomeProduto</td>
                <td>@produto.Preco.ToString("C")</td>
                <td>@produto.QuantidadeEstoque</td>
                <td>@produto.NomeCategoria</td>
                <td>@produto.Fornecedor</td>
                <td>
                    <a asp-page="/Produtos/Edit" asp-route-id="@produto.IdProduto" class="btn btn-warning">📝</a>
                    <a asp-page="/Produtos/Delete" asp-route-id="@produto.IdProduto" class="btn btn-danger">🗑</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>

<a asp-page="/Produtos/Create" class="btn btn-primary">+</a>
